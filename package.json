{
  "name": "project-metrics",
  "version": "0.1.0",
  "description": "Product Metrics",
  "main": "server/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LearnersGuild/product-metrics.git"
  },
  "author": {
    "name": "Jeffrey Wescott",
    "email": "jeffrey@learnersguild.org"
  },
  "scripts": {
    "build": "mkdir -p dist && webpack --config config/webpack-production-config.js",
    "icons:fetch": "mkdir -p dist && curl -s https://icons.learnersguild.org/tags > dist/icons-metadata.json",
    "start": "npm run icons:fetch & node server",
    "postinstall": "npm run build",
    "test": "./node_modules/.bin/xo && NODE_ENV=test ./node_modules/.bin/ava"
  },
  "keywords": [
    "metrics",
    "swagger"
  ],
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/LearnersGuild/project-metrics/issues"
  },
  "homepage": "https://github.com/LearnersGuild/project-metrics#readme",
  "dependencies": {
    "babel-core": "^6.3.21",
    "babel-loader": "^6.2.3",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-2": "^6.5.0",
    "babel-runtime": "^6.3.19",
    "bourbon": "^4.2.6",
    "bourbon-neat": "^1.7.2",
    "cookie-parser": "^1.4.1",
    "css-loader": "^0.23.0",
    "css-modules-require-hook": "^2.0.4",
    "dotenv": "^1.2.0",
    "ejs": "^2.3.4",
    "eslint-config-xo-react": "^0.3.0",
    "eslint-plugin-react": "^3.16.1",
    "express": "^4.13.3",
    "express-jwt": "^3.3.0",
    "express-sslify": "^1.0.1",
    "extract-text-webpack-plugin": "^0.9.1",
    "file-loader": "^0.8.5",
    "forever-monitor": "^1.7.0",
    "history": "^1.17.0",
    "isomorphic-fetch": "^2.2.0",
    "json-loader": "^0.5.4",
    "lodash": "^3.10.1",
    "material-ui": "^0.14.4",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "node-schedule": "^1.0.0",
    "normalize-css": "^2.3.1",
    "passport": "^0.3.2",
    "passport-auth0": "^0.5.1",
    "postcss": "^5.0.16",
    "postcss-modules-extract-imports": "^1.0.0",
    "postcss-modules-local-by-default": "^1.0.1",
    "postcss-modules-scope": "^1.0.0",
    "postcss-modules-values": "^1.1.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.6",
    "react-router": "^1.0.3",
    "react-router-redux": "^3.0.0",
    "react-tap-event-plugin": "^0.2.2",
    "redux": "^3.3.1",
    "redux-thunk": "^1.0.3",
    "resolve-url-loader": "^1.4.3",
    "sass-loader": "^3.1.2",
    "sass-resources-loader": "^1.0.1",
    "serve-static": "^1.10.0",
    "style-loader": "^0.13.0",
    "swagger-tools": "0.9.15",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.5.0",
    "yamljs": "^0.2.5"
  },
  "devDependencies": {
    "ava": "^0.11.0",
    "babel-cli": "^6.5.1",
    "babel-plugin-react-transform": "^2.0.0-beta1",
    "eslint-config-xo-react": "^0.3.0",
    "eslint-plugin-react": "^3.16.1",
    "jsdom": "^8.0.4",
    "piping": "^0.3.0",
    "react-addons-test-utils": "^0.14.3",
    "react-transform-hmr": "^1.0.1",
    "xo": "^0.12.1"
  },
  "engines": {
    "node": "5.6.0"
  },
  "xo": {
    "extends": "xo-react",
    "rules": {
      "comma-dangle": [
        0
      ],
      "no-negated-condition": [
        0
      ],
      "react/jsx-indent-props": [
        2,
        2
      ],
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "HTTPS"
          ]
        }
      ]
    },
    "esnext": true,
    "space": true,
    "semicolon": false
  },
  "ava": {
    "files": [
      "**/__tests__/*-test.js"
    ],
    "failFast": true,
    "verbose": true,
    "require": [
      "babel-core/register",
      "./config/testConfig"
    ]
  }
}
