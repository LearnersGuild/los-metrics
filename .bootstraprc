---
# loglevel: debug
bootstrapVersion: 4

env:
  development:
    extractStyles: false
  production:
    extractStyles: true

# preBootstrapCustomizations: ./config/variables.scss
# bootstrapCustomizations: ./config/_bootstrap-customizations.scss
# mainSass: './common/containers/App.scss',

# styleLoader: ExtractTextPlugin.extract('style-loader', 'css?sourceMap&minimize!sass?sourceMap'),
styleLoaders:
  - style
  - css
  - sass

useFlexbox: true

styles:
  # mixins
  mixins: true

  # reset and dependencies
  normalize: true
  print: false

  # core CSS
  reboot: true
  type: true
  images: true
  code: true
  grid: true
  tables: true
  forms: true
  buttons: true

  # components
  animation: true
  dropdown: true
  button-group: true
  input-group: true
  custom-forms: true
  nav: true
  navbar: true
  card: true
  breadcrumb: true
  pagination: true
  pager: true
  labels: true
  jumbotron: true
  alert: true
  progress: true
  media: true
  list-group: true
  responsive-embed: true
  close: true

  # components w/ JavaScript
  modal: true
  tooltip: true
  popover: true
  carousel: true

  # Utility classes
  utilities: true
  utilities-spacing: true
  utilities-responsive: true



scripts: false
